@model List<Modules>

    <h2>Today's Planned Modules</h2>
@foreach (var module in Model.Where(m => m.PlannedDay == DateTime.Today.DayOfWeek))
{
    <p>@module.Name</p>
}

<!-- Inside your .cshtml file or layout file -->
<head>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>



@using (Html.BeginForm("SavePlannedDays", "ModuleController", FormMethod.Post))
{
    for (int i = 0; i < Model.Count; i++)
    {
        @Html.HiddenFor(m => m[i].Id)
        @Html.LabelFor(m => m[i].PlannedDay)
  }

    <input type="submit" value="Save" />
}

